extends ../layout/main

block variables
    - var title = 'Catalog';
    - var description = 'Catalog';
    - var pageClass = 'index-page';

block content
    section.catalog-first-section.catalog-first-section__internal.pb-3
        .container
            .row
                .col-xl-5.bg-white-color.bg-white-color__mobil
                    nav(aria-label='breadcrumb')
                        ol.breadcrumb
                            li.breadcrumb-item
                                a(href='#') Главная
                            li.breadcrumb-item.active(aria-current='page') Мебель
                    h1.h1.mb-0 Кухни из дерева на заказ
                .col-xl-7
                    p.catalog-first-section__description Фабрика «Мебельер» изготавливает мебель на заказ “под ключ”, начиная от выезда замерщика и заканчивая сборкой изделия. Создаём мебель из натурального массива дерева, МДФ, ДСП и других мебельных материалов в стилях Лофт, Классика, Прованс, Модерн и др.

    section.catalog-second-section.pt-2
        .container.catalog-filter
            .row
                .col-12
                    .catalog-filter__list
                        .catalog-filter__item
                            .form-group
                                label(for='inputStateTypeFirst') Тип лестниц:
                                select#inputStateTypeFirst.form-control
                                    option(selected='selected') Все типы
                                    option a
                                    option as
                                    option gdfgmsjdfhgjsdfhgjs
                                    option dfasdf
                        .catalog-filter__item
                            .form-group
                                label(for='inputStateTypeSecond') Ограждение:
                                select#inputStateTypeSecond.form-control
                                    option(selected='selected') Любое
                                    option a
                                    option as
                                    option gdfgmsjdfhgjsdfhgjs
                                    option dfasdf
                        .catalog-filter__item
                            .form-group
                                label(for='inputStateTypeThird') Материал ступений:
                                select#inputStateTypeThird.form-control
                                    option(selected='selected') Любое
                                    option a
                                    option as
                                    option gdfgmsjdfhgjsdfhgjs
                                    option dfasdf
        .container.catalog-container
            .row
                .col-12
                    .catalog-second-section__wrapper
                        +productCard('card-product card-product_bottom-left active', 'catalog-mebel-1.png', 'Винтовая дизайнерская', '79 990 грн.')
                        +productCard('card-product card-product_top-left', 'catalog-mebel-2.png', 'Со стеклянными ограждениями', '220 990 грн.')
                        +productCard('card-product card-product_top-left', 'catalog-mebel-3.png', 'Дизайнерская лестница', '149 990 грн.')
                        +productCard('card-product card-product_top-left dark-background', 'catalog-mebel-4.png', 'Дизайнерская кухня', '149 990 грн.')
                        +productCard('card-product card-product_top-left', 'catalog-mebel-5.png', 'Винтовая дизайнерская', '79 990 грн.')
                        +productCard('card-product card-product_top-left', 'catalog-mebel-6.png', 'Винтовая дизайнерская', '79 990 грн.')
                        +catalogInfo('shadow-black' ,'url("assets/img/mebel-info-img.jpg")', 'Подсветка', 'Светодиодные ленты высокого качества (не перегорят через неделю).', 'Монтаж выполняют опытные специалисты (ваша страховка от короткого замыкания и пожара вследствие непрофессионального монтажа).')
                        +productCard('card-product card-product_top-left', 'catalog-mebel-7.png', 'Винтовая дизайнерская', '79 990 грн.')
                        +productCard('card-product card-product_top-left', 'catalog-mebel-8.png', 'Винтовая дизайнерская', '79 990 грн.')
                        +productCard('card-product card-product_top-left', 'catalog-mebel-9.png', 'Современная деревянная лестница', '79 990 грн.')
                        +productCard('card-product card-product_top-left dark-background', 'catalog-mebel-10.png', 'Со стеклянными ограждениями', '220 990 грн.')
                        +productCard('card-product card-product_bottom-left dark-background', 'catalog-mebel-11.png', 'Дизайнерская лестница', '149 990 грн.')

                    button.btn.btn-dark.catalog-container__btn Загрузить еще 12 товаров
        .container
            .row
                .col-12
                    .inner-page-slider
                        +type-stair('type-stair-1.jpg', 'Винтовые', 'Это лестницы которые поворачивают')
                        +type-stair('type-stair-2.jpg', 'Поворотные', 'Это лестницы которые поворачивают')
                        +type-stair('type-stair-3.jpg', 'Прямые', 'Это лестницы которые поворачивают')
                        //+type-stair('type-stair-3.jpg', 'Прямые', 'Это лестницы которые поворачивают')
                        //+type-stair('type-stair-3.jpg', 'Прямые', 'Это лестницы которые поворачивают')


