                                img.w-100(src='assets/img/contacts-img-1.jpg')
                            .contacts-section__imgOne-col-2
                                img.w-100(src='assets/img/contacts-img-2.jpg')

                        .contacts-section__map
                            #wrapMap
                                iframe.contacts-section__map-iframe(style='pointer-events: none' src='https://yandex.ru/map-widget/v1/?um=constructor%3A78983ea55134f18f08b7af21adb1ef48e811db8aa645b220b42f7c732a78b51a&source=constructor' height='394' frameborder='0')
