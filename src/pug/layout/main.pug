include ../utils/mixins
block variables

doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title #{title}
    meta(name='viewport' content='width=device-width, initial-scale=1')
    meta(name="description", content=description)
    link(href='https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,300;1,400&display=swap' rel='stylesheet')
    block head

  body(class=pageClass)
    #wrapper.wrapper
      #app.app(class=mainClass)
        include ../includes/modules/header
        .content-wrapper
          block content

        if footerMin
          include ../includes/modules/footer-min
        else
          include ../includes/modules/footer
    block script
